# Medical RAG Configuration

# OpenAI API (Default)
OPENAI_API_KEY=your_openai_api_key_here

# Groq API (Alternative - Free tier available, faster)
USE_GROQ=false
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# RAG Settings
RAG_TOP_K=5              # Number of guideline chunks to retrieve
RAG_TEMPERATURE=0.3      # LLM temperature (0.1-0.5 for medical, higher = creative)
RAG_MAX_TOKENS=600       # Maximum response length

# Vector Store Settings
VECTOR_DB_PATH=./vector_db
DOCUMENTS_PATH=./documents
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

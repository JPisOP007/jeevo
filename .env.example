APP_NAME=Jeevo Health Platform
HOST=0.0.0.0
PORT=8000
DEBUG=False
ENVIRONMENT=production

# ============================================================================
# WHATSAPP CONFIGURATION
# ============================================================================

WHATSAPP_API_URL=https://graph.facebook.com/v24.0
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token_here
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/jeevo
DATABASE_ECHO=False

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=3600

# Session Management
SESSION_EXPIRE_MINUTES=60

# ============================================================================
# LLM CONFIGURATION
# ============================================================================

# Groq API (Primary LLM)
USE_GROQ=true
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_VISION_MODEL=llama-3.2-90b-vision-preview

# OpenAI API (Fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_VISION_MODEL=gpt-4o-mini

# Google Gemini API (Alternative)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# ============================================================================
# MEDICAL RAG SYSTEM
# ============================================================================

# RAG System Enable/Disable
MEDICAL_RAG_ENABLED=true

# RAG Vector Database
CHROMA_PERSIST_DIRECTORY=./medical_rag/vector_db
CHROMA_COLLECTION_NAME=medical_guidelines

# RAG Embeddings Model
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2

# RAG Confidence Thresholds
RAG_CONFIDENCE_THRESHOLD_HIGH=0.8
RAG_CONFIDENCE_THRESHOLD_MEDIUM=0.6
RAG_CONFIDENCE_THRESHOLD_LOW=0.4
RAG_MIN_SEARCH_RESULTS=3
RAG_MAX_SEARCH_RESULTS=5

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Text-to-Speech
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Weather & Location
OPENWEATHER_API_KEY=your_openweather_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# FEATURES
# ============================================================================

# Feature Flags
ENABLE_AUDIO_PROCESSING=true
ENABLE_VISION_PROCESSING=true
ENABLE_MEDICAL_RAG=true
ENABLE_MEDICAL_VALIDATION=true
